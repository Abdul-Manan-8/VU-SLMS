@model VU_SLMS.Models.Benefit
@{
    ViewData["Title"] = "Add/Update Benefit";
    var emp = ViewBag.Totalemp;
}

<div class="pagetitle">
    <h1>@ViewData["Title"]</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/home/index">Dashboard</a></li>
            <li class="breadcrumb-item active">@ViewData["Title"]</li>
        </ol>
    </nav>
</div>

<div class="card row">
    <div class="card-body col-md-12 col-lg-10">
        <h5 class="card-title">@ViewData["Title"]</h5>
        <form action="AddUpdateBenefit" method="post">
            @if (Model != null)
            {
                <input type="hidden" asp-for="Id" />
            }
            <div class="row mb-3">
                <div class="col-sm-10">
                    <div class="form-floating mb-3">
                        <select asp-for="EmployeeId" class="form-select" id="floatingSelect" aria-label="Floating label select example" required>
                            <option selected value="">Select Employee</option>
                            @foreach(var E in emp)
                            {
                                <option value="@E.Id">@E.Name</option>
                            }
                        </select>
                        <label for="floatingSelect">Employee Name</label>
                    </div>
                    <div class="form-floating mb-3">
                    <select asp-for="Name" class="form-select" id="myDropdown" aria-label="Floating label select example" required>
                            <option selected value="">Select Benefit Type</option>
                            <option value="Loan">Loan</option>
                            <option value="Medical Allowance">Medical Allowance</option>
                            <option value="Uniform">Uniform</option>
                            <option value="Shoes">Shoes</option>
                            <option value="Jacket">Jacket</option>
                            <option value="Other">Other</option>
                        </select>
                        <label for="floatingSelect">Benefit</label>
                    </div>
                    <div class="form-floating mb-3">
                        <textarea asp-for="Description" class="form-control" placeholder="Benefit Description" id="floatingTextarea" style="height: 100px;"></textarea>
                        <label for="floatingTextarea">Benefit Description</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="DateOfIssue" type="text" class="form-control" id="floatingdate" placeholder="Date of Issue" onfocus="(this.type='date')" onblur="if(!this.value) this.type='text'" autocomplete="off" required>
                        <label for="floatingdate">Date of Issue</label>
                    </div>
                    @if (Model != null)
                    {
                        <button type="submit" class="btn btn-sm btn-outline-primary">Update Benefit</button>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-sm btn-outline-primary">Add Benefit</button>
                    }
                    <button type="reset" class="btn btn-sm  btn-outline-warning">Reset Form</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section scripts{
    <script>
        $( function () {
            //alert("Hi");
        });
    </script>
}



