@model IEnumerable<VU_SLMS.Models.Employee>
@{
    ViewData["Title"] = "Dashboard";
    var success = TempData["success"];
}

<div class="pagetitle">
    <h1>@ViewData["Title"]</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/home/index">Home</a></li>
            <li class="breadcrumb-item active">@ViewData["Title"]</li>
        </ol>
    </nav>
</div>
@if (success != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-1"></i>
        @success
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<div class="row">
    <!-- Employee Card -->
    <div class="col-xxl-6 col-md-6">
        <div class="card info-card sales-card">
            <div class="card-body">
                <h5 class="card-title">Total Employees <span>| Today</span></h5>
                <div class="d-flex align-items-center">
                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                        <i class="bi bi-people"></i>
                    </div>
                    <div class="ps-3">
                        <h6>@ViewBag.TotalEmp</h6>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Employee Card -->
    <!-- Benefit Card -->
    <div class="col-xxl-6 col-md-6">
        <div class="card info-card customers-card">
            <div class="card-body">
                <h5 class="card-title">Total Benefits</h5>
                <div class="d-flex align-items-center">
                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                        <i class="bi bi-gift"></i>
                    </div>
                    <div class="ps-3">
                        <h6>@ViewBag.TotalBen</h6>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <!-- End Benefit Card -->
</div>

<!-- Leave Require -->
@foreach(var E in Model)
{

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Leave Required for <strong>@E.Name</strong></h5>
            <dl class="row">
                <dt class="col-sm-4">
                    <strong>Name: </strong>
                </dt>
                <dd class="col-sm-8">
                    @E.Name
                </dd>
                <dt class="col-sm-4">
                    <strong>Joining Date: </strong>
                </dt>
                <dd class="col-sm-8">
                    @E.JoiningDate.ToShortDateString()
                </dd>
            </dl>
            <div class="mt-3">
                <a href="/home/leavelist?id=@E.Id" class="btn btn-sm btn-outline-info">leaves detail</a>
            </div>
        </div>
    </div>
}
