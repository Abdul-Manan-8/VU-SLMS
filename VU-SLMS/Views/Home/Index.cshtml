@model IEnumerable<VU_SLMS.Models.Employee>
@{
    ViewData["Title"] = "Dashboard";
}

<div class="pagetitle">
    <h1>@ViewData["Title"]</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/home/index">Home</a></li>
            <li class="breadcrumb-item active">@ViewData["Title"]</li>
        </ol>
    </nav>
</div>

<div class="row">
    <!-- Employee Card -->
    <div class="col-xxl-6 col-md-6">
        <div class="card info-card sales-card">
            <div class="card-body">
                <h5 class="card-title">Total Employees <span>| Today</span></h5>
                <div class="d-flex align-items-center">
                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                        <i class="bi bi-people"></i>
                    </div>
                    <div class="ps-3">
                        <h6>@ViewBag.TotalEmp</h6>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Employee Card -->
    <!-- Benefit Card -->
    <div class="col-xxl-6 col-md-6">
        <div class="card info-card customers-card">
            <div class="card-body">
                <h5 class="card-title">Total Benefits</h5>
                <div class="d-flex align-items-center">
                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                        <i class="bi bi-gift"></i>
                    </div>
                    <div class="ps-3">
                        <h6>@ViewBag.TotalBen</h6>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <!-- End Benefit Card -->
</div>

<!-- Leave Require -->
@foreach(var E in Model)
{
    <div class="col-12">
        <div class="card top-selling overflow-auto">
            <div class="card-body pb-0">
                <h5 class="card-title">Leave Required for <strong>@E.Name</strong> <a href="/home/leavelist?id=@E.Id" class="btn btn-info">leaves deatil</a></h5>
                
            </div>
        </div>
    </div>
}
