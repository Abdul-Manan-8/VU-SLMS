@model VU_SLMS.Models.Benefit
@{
    ViewData["Title"] = "Benefit Detail";
}
<div class="card">
    <div class="card-body">
        <h5 class="card-title">@ViewData["Title"]</h5>
        <dl class="row">
            <dt class="col-sm-4">
                <strong>Employee Name:</strong>
            </dt>
            <dd class="col-sm-8">
                @Model.EmployeeId
            </dd>
            <dt class="col-sm-4">
                <strong>Benefit Type:</strong>
            </dt>
            <dd class="col-sm-8">
                @Model.Name
            </dd>
            <dt class="col-sm-4">
                <strong>Issue Date:</strong>
            </dt>
            <dd class="col-sm-8">
                @Model.DateOfIssue.ToShortDateString()
            </dd>
        </dl>
        <div class="mt-3">
            <a asp-action="BenefitList" class="btn btn-sm btn-outline-info"><i class="bi bi-trash-fill"> Back to List</i></a>
            <a asp-action="AddUpdateBenefit" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-warning"><i class="bi bi-list-ul"> Edit</i></a>
            <a asp-action="DeleteBenefit" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-danger"><i class="bi bi-trash-fill"> Delete</i></a>
        </div>
    </div>
</div>