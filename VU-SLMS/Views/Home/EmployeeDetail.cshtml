@model VU_SLMS.Models.Employee
@{
    ViewData["Title"] = "Employee Detail";
}

<div class="pagetitle">
    <h1>@ViewData["Title"]</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/home/index">Home</a></li>
            <li class="breadcrumb-item active">Dashboard</li>
            <li class="breadcrumb-item active">@ViewData["Title"]</li>
        </ol>
    </nav>
</div>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@ViewData["Title"]</h5>
        <dl class="row">
            <dt class="col-sm-4">
                <strong>Name: </strong>
            </dt>
            <dd class="col-sm-8">
                @Model.Name
            </dd>
            <dt class="col-sm-4">
                <strong>Designation: </strong>
            </dt>
            <dd class="col-sm-8">
                @Model.Designation
            </dd>
            <dt class="col-sm-4">
                <strong>Gender: </strong>
            </dt>
            <dd class="col-sm-8">
                @Model.Gender
            </dd>
            <dt class="col-sm-4">
                <strong>Phone No: </strong>
            </dt>
            <dd class="col-sm-8">
                @if(Model.PhoneNo != null)
                {
                    <p><strong>+92 </strong>@Model.PhoneNo</p>
                }
            </dd>
            <dt class="col-sm-4">
                <strong>Joining Date: </strong>
            </dt>
            <dd class="col-sm-8">
                @Model.JoiningDate.ToShortDateString()
            </dd>
            </dl>
        <div class="mt-3">
            <a asp-action="EmployeeList" class="btn btn-sm btn-outline-info"><i class="bi bi-list-ul"> Back to List</i></a>
            <a asp-action="AddUpdateEmployee" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-warning"><i class="bi bi-pencil-fill"> Edit</i></a>
            @if (Context.Session.GetInt32("Type") == 1 || Context.Session.GetInt32("Type") == 0)
            {
                <a asp-action="DeleteEmployee" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-danger"><i class="bi bi-trash-fill"> Delete</i></a>
            }
        </div>
    </div>
</div>