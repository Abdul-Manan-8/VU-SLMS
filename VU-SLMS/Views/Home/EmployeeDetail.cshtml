@model VU_SLMS.Models.Employee
@{
    ViewData["Title"] = "Employee Detail";
}
<div class="card">
    <div class="card-body">
        <h5 class="card-title">@ViewData["Title"]</h5>
        <dl class="row">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-8">
                @Model.Name
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Designation)
            </dt>
            <dd class="col-sm-8">
                @Model.Designation
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.JoiningDate)
            </dt>
            <dd class="col-sm-8">
                @Model.JoiningDate.ToShortDateString()
            </dd>
            </dl>
        <div class="mt-3">
                <a asp-action="EmployeeList" class="btn btn-sm btn-outline-info"><i class="bi bi-trash-fill"> Back to List</i></a>
                <a asp-action="AddUpdateEmployee" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-warning"><i class="bi bi-list-ul"> Edit</i></a>
                <a asp-action="DeleteEmployee" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-danger"><i class="bi bi-trash-fill"> Delete</i></a>
        </div>
    </div>
</div>