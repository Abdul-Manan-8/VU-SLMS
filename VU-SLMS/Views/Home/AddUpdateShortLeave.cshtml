@model VU_SLMS.Models.ShortLeave
@{
    ViewData["Title"] = "Add/Update Short Leave";
    var emp = ViewBag.Totalemp;
    var error = TempData["error"];
}

<div class="pagetitle">
    <h1>@ViewData["Title"]</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/home/index">Dashboard</a></li>
            <li class="breadcrumb-item active">@ViewData["Title"]</li>
        </ol>
    </nav>
</div>

<div class="card row">
    <div class="card-body col-md-12 col-lg-10">
        <h5 class="card-title">@ViewData["Title"]</h5>
        @if (error != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle me-1"></i>
                @error
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        <form action="AddUpdateShortLeave" method="post">
            @if (Model != null)
            {
                <input type="hidden" asp-for="Id" />
            }
            <div class="row mb-3">
                <div class="col-sm-10">
                    <div class="form-floating mb-3">
                        <select asp-for="EmployeeId" class="form-select" id="floatingSelect" aria-label="Floating label select example" required>
                            <option selected value="">Select Employee</option>
                            @foreach (var E in emp)
                            {
                                <option value="@E.Id">@E.Name</option>
                            }
                        </select>
                        <label for="floatingSelect">Employee Name</label>
                    </div>
                    @* <div class="form-floating mb-3">
                        <select asp-for="Name" class="form-select" id="myDropdown" aria-label="Floating label select example" required>
                            <option selected value="">Select Leave Type</option>
                            <option value="Regular">Regular</option>
                            <option value="Emergency">Emergency</option>
                            <option value="Medical">Medical</option>
                            <option value="Eid">Eid</option>
                            <option value="Other">Other</option>
                        </select>
                        <label for="floatingSelect">Leave Type</label>
                    </div> *@
                    <div class="form-floating mb-3">
                        <textarea asp-for="Description" class="form-control" placeholder="Short Leave Description" id="floatingTextarea" style="height: 100px;"></textarea>
                        <label for="floatingTextarea">Short Leave Description</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="LeaveDate" type="text" class="form-control" id="floatingdate" placeholder="Leave Date" onfocus="(this.type='date')" onblur="if(!this.value) this.type='text'" autocomplete="off" required>
                        <label for="floatingdate">Leave Date</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="TimeFrom" type="text" class="form-control" id="floatingtimefrom" placeholder="Time From" onfocus="(this.type='time')" onblur="if(!this.value) this.type='text'" autocomplete="off" required>
                        <label for="floatingdate">Time From</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="TimeTo" type="text" class="form-control" id="floatingtimeto" placeholder="Time To" onfocus="(this.type='time')" onblur="if(!this.value) this.type='text'" autocomplete="off" required>
                        <label for="floatingtimeto">Time To</label>
                    </div>
                    @if (Model != null)
                    {
                        <button id="ShortLeaveSubmit" type="submit" class="btn btn-sm btn-outline-primary">Update Short Leave</button>
                    }
                    else
                    {
                        <button id="ShortLeaveSubmit" type="submit" class="btn btn-sm btn-outline-primary">Add Short Leave</button>
                    }
                    <button id="ShortLeaveReset" type="reset" class="btn btn-sm  btn-outline-warning">Reset Form</button>
                </div>
            </div>
        </form>
    </div>
</div>

